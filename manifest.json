{
  "manifest_version": 3,
  "name": "TabCloseBridge",
  "description": "Exposes a single-line function requestTabClose() that lets allowlisted sites close their own tab.",
  "version": "1.1.0",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icons/tabclosebridge16.png",
    "32": "icons/tabclosebridge32.png",
    "48": "icons/tabclosebridge48.png",
    "128": "icons/tabclosebridge128.png"
  },
  "action": {
    "default_title": "TabCloseBridge",
    "default_icon": {
      "16": "icons/tabclosebridge16.png",
      "32": "icons/tabclosebridge32.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["page-bridge.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}